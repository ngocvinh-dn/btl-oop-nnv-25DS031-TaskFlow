<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox styleClass="form-container" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="500.0" spacing="20.0"  stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.AddTaskController">
    <children>
        <Label fx:id="lblHeaderTitle" styleClass="form-title" text="New Task" />

        <VBox spacing="8.0">
            <children>
                <Label styleClass="form-label" text="Title" />
                <TextField fx:id="txtTitle" promptText="What needs to be done?" />
            </children>
        </VBox>

        <VBox spacing="8.0">
            <children>
                <Label styleClass="form-label" text="Description" />
                <TextArea styleClass="text-area" fx:id="txtDescription" prefHeight="80.0" prefWidth="200.0" promptText="Enter details here..." wrapText="true" />
            </children>
        </VBox>
        <VBox prefHeight="143.0" prefWidth="440.0" spacing="20.0">
            <children>

                <HBox spacing="15.0">
                    <children>
                        <VBox prefHeight="59.0" spacing="8.0">
                            <children>
                                <Label styleClass="form-label" text="Due Date Time" />
                                <DatePicker styleClass="date-picker" fx:id="dpDueDate" maxWidth="1.7976931348623157E308" prefHeight="33.0" prefWidth="280.0" promptText="dd/mm/yyyy" />
                            </children>
                        </VBox>
                        <HBox spacing="5.0">
                            <children>
                                <Spinner fx:id="spHour" editable="true" prefWidth="67.0" styleClass="spinner" />
                                <Label style="-fx-font-weight: bold; -fx-text-fill: #888;" text=":">
                                    <HBox.margin>
                                        <Insets top="10.0" />
                                    </HBox.margin></Label>
                                <Spinner fx:id="spMinute" editable="true" prefWidth="65.0" styleClass="spinner" />
                            </children>
                            <HBox.margin>
                                <Insets top="26.0" />
                            </HBox.margin>
                        </HBox>
                    </children>
                </HBox>

                <VBox prefWidth="140.0" spacing="8.0">
                    <children>
                        <Label styleClass="form-label" text="Priority" />
                        <ComboBox fx:id="cbPriority" maxWidth="1.7976931348623157E308" prefHeight="33.0" prefWidth="138.0" styleClass="combo-box" />
                    </children>
                </VBox>
            </children>
        </VBox>

        <VBox styleClass="recurrence-pane">
            <children>
                <CheckBox styleClass="recurrence-checkbox" fx:id="chkRecurrence" text="Repeat this task?" style="-fx-font-weight: bold; -fx-text-fill: #555;" />

                <HBox fx:id="boxRecurrenceOptions" spacing="15.0" alignment="CENTER_LEFT" visible="false" managed="false">
                    <children>
                        <Label text="Every:" />
                        <ComboBox fx:id="cbRecurrence" prefWidth="100.0" />

                        <Label text="Until:" />
                        <DatePicker fx:id="dpRecurrenceEnd" prefWidth="130.0" />
                    </children>
                </HBox>

                <HBox fx:id="boxWeekDays" spacing="10.0" alignment="CENTER_LEFT" visible="false" managed="false">
                    <padding>
                        <Insets top="5.0" left="5.0"/>
                    </padding>
                    <children>
                        <CheckBox fx:id="chkMon" text="Mo" styleClass="day-checkbox" />
                        <CheckBox fx:id="chkTue" text="Tu" styleClass="day-checkbox" />
                        <CheckBox fx:id="chkWed" text="We" styleClass="day-checkbox" />
                        <CheckBox fx:id="chkThu" text="Th" styleClass="day-checkbox" />
                        <CheckBox fx:id="chkFri" text="Fr" styleClass="day-checkbox" />
                        <CheckBox fx:id="chkSat" text="Sa" styleClass="day-checkbox" />
                        <CheckBox fx:id="chkSun" text="Su" styleClass="day-checkbox" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <VBox spacing="8.0">
            <children>
                <Label styleClass="form-label" text="Labels" />
                <FlowPane fx:id="labelsPane" hgap="15.0" vgap="10.0" />
            </children>
        </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="15.0">
            <children>
                <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" styleClass="btn-secondary" text="Cancel" />
                <Button fx:id="btnSave" defaultButton="true" mnemonicParsing="false" styleClass="btn-primary" text="Save Task" />
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>
