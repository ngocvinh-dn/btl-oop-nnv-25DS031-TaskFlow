<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<HBox spacing="20.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.CalendarController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <VBox prefHeight="600.0" prefWidth="417.0" styleClass="card-panel">
            <children>
                <Label styleClass="header-title" text="Calendar">
                    <VBox.margin>
                        <Insets bottom="13.0" left="10.0" />
                    </VBox.margin>
                </Label>
                <VBox styleClass="calendar-widget-container" VBox.vgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <Button fx:id="btnPrevMonth" mnemonicParsing="false" styleClass="calendar-nav-btn" text="&lt;" />
                                <Label fx:id="lblMonthYear" prefHeight="19.0" prefWidth="146.0" styleClass="calendar-month-label" text="DECEMBER 2025" />
                                <Button fx:id="btnNextMonth" mnemonicParsing="false" styleClass="calendar-nav-btn" text="&gt;" />

                                <Region HBox.hgrow="ALWAYS" />

                                <Button fx:id="btnToday" mnemonicParsing="false" prefHeight="25.0" prefWidth="103.0" styleClass="calendar-nav-today-btn" text="Today" />
                            </children>
                            <padding>
                                <Insets bottom="15.0" top="10.0" />
                            </padding>
                        </HBox>

                        <GridPane alignment="CENTER" hgap="5.0">
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="40.0" />
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="40.0" />
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="40.0" />
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="40.0" />
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="40.0" />
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="40.0" />
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="40.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label styleClass="calendar-day-header" text="Sun" />
                                <Label styleClass="calendar-day-header" text="Mon" GridPane.columnIndex="1" />
                                <Label styleClass="calendar-day-header" text="Tue" GridPane.columnIndex="2" />
                                <Label styleClass="calendar-day-header" text="Wed" GridPane.columnIndex="3" />
                                <Label styleClass="calendar-day-header" text="Thu" GridPane.columnIndex="4" />
                                <Label styleClass="calendar-day-header" text="Fri" GridPane.columnIndex="5" />
                                <Label styleClass="calendar-day-header" text="Sat" GridPane.columnIndex="6" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </GridPane>

                        <GridPane fx:id="calendarGrid" alignment="CENTER" hgap="5.0" vgap="5.0">
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
                                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
                                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
                                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
                                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
                                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
                                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
                            </columnConstraints>
                        </GridPane>


                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>

        <AnchorPane styleClass="card-panel" HBox.hgrow="ALWAYS">
            <children>

                <VBox nodeOrientation="LEFT_TO_RIGHT" spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <HBox prefHeight="0.0" prefWidth="267.0">
                            <children>
                                <Label fx:id="lblSelectedDate" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" styleClass="header-title" text="Tasks for Today">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                    <padding>
                                        <Insets top="5.0" />
                                    </padding></Label>
                                <Region HBox.hgrow="ALWAYS" />
                                <ComboBox fx:id="cbFilterPriority" prefWidth="120.0" promptText="Priority" styleClass="combo-filter" />
                                <ComboBox fx:id="cbSort" prefWidth="140.0" promptText="Sort By" styleClass="combo-filter" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="36.0" prefWidth="666.0" spacing="15.0">
                            <children>
                                <Label fx:id="lblActiveCount" styleClass="status-badge, badge-active" text="0 active">
                                    <HBox.margin>
                                        <Insets />
                                    </HBox.margin></Label>
                                <Label fx:id="lblCompletedCount" styleClass="status-badge, badge-completed" text="0 completed" />

                                <Region HBox.hgrow="ALWAYS" />

                                <HBox alignment="CENTER_RIGHT">
                                    <children>
                                        <ToggleButton fx:id="filterAll" prefHeight="23.0" prefWidth="75.0" selected="true" styleClass="filter-btn" text="All">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="filterGroup" />
                                            </toggleGroup>
                                        </ToggleButton>
                                        <ToggleButton fx:id="filterActive" prefHeight="23.0" prefWidth="75.0" styleClass="filter-btn" text="Active" toggleGroup="$filterGroup" />
                                        <ToggleButton fx:id="filterCompleted" prefHeight="23.0" prefWidth="75.0" styleClass="filter-btn" text="Completed" toggleGroup="$filterGroup" />
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </VBox.margin>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </VBox>

                <VBox fx:id="tasksContainer" layoutX="14.0" layoutY="14.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="85.0">
                </VBox>

                <VBox fx:id="emptyStateBox" alignment="CENTER" layoutX="148.0" layoutY="200.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="85.0">
                    <children>
                        <Circle fill="TRANSPARENT" radius="30.0" stroke="#757575" strokeType="INSIDE" strokeWidth="4.0" />
                        <Label text="No tasks found today!" textFill="#555555">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <Label text="Click + to add one..." textFill="#777777">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <Button fx:id="btnAddToday" mnemonicParsing="false" styleClass="fab-btn" text="+" AnchorPane.bottomAnchor="30.0" AnchorPane.rightAnchor="30.0" />
            </children>
        </AnchorPane>
    </children>
</HBox>
