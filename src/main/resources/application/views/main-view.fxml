<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane minHeight="600.0" minWidth="900.0" styleClass="root-pane" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.MainController">
    <children>

        <BorderPane minHeight="580.0" minWidth="880.0" styleClass="app-container">

            <StackPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </StackPane.margin>

            <left>
                <VBox prefHeight="580.0" prefWidth="189.0" styleClass="sidebar" BorderPane.alignment="CENTER">
                    <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="200.0" spacing="10.0">
                            <padding>
                                <Insets left="25.0" />
                            </padding>
                            <children>
                                <ImageView fitHeight="60.0" fitWidth="144.0" pickOnBounds="true" preserveRatio="true" styleClass="logo">
                                    <image>
                                        <Image url="@../images/logowithtext.png" />
                                    </image>
                                    <HBox.margin>
                                        <Insets bottom="15.0" top="20.0" />
                                    </HBox.margin>
                                </ImageView>
                            </children>
                        </HBox>
                        <Separator prefHeight="0.0" prefWidth="189.0" />

                        <Label prefHeight="23.0" prefWidth="193.0" styleClass="sidebar-section-label" text="WORK AREA" textAlignment="CENTER">
                            <VBox.margin>
                                <Insets bottom="5.0" top="20.0" />
                            </VBox.margin>
                        </Label>

                        <VBox>
                            <children>
                                <Button fx:id="btnNavTasks" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" prefHeight="48.0" prefWidth="210.0" styleClass="nav-button, nav-button-active" text="Tasks">
                                    <graphic>
                                        <Region prefHeight="18.0" prefWidth="18.0" styleClass="icon-tasks" />
                                    </graphic>
                                </Button>

                                <Button fx:id="btnNavCalendar" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" prefHeight="48.0" prefWidth="210.0" styleClass="nav-button" text="Calendar">
                                    <graphic>
                                        <Region prefHeight="18.0" prefWidth="18.0" styleClass="icon-calendar" />
                                    </graphic>
                                </Button>

                                <Button fx:id="btnNavLabels" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" prefHeight="48.0" prefWidth="210.0" styleClass="nav-button" text="Labels">
                                    <graphic>
                                        <Region prefHeight="18.0" prefWidth="18.0" styleClass="icon-label" />
                                    </graphic>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets top="15.0" />
                            </VBox.margin>
                        </VBox>

                        <Region VBox.vgrow="ALWAYS" />
                        <Separator prefWidth="200.0" />
                        <VBox alignment="BOTTOM_LEFT" spacing="10" style="-fx-padding: 0 20 0 20;">
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Region maxHeight="20.0" maxWidth="18.0" styleClass="icon-user" style="-fx-opacity: 1" />
                                <Label fx:id="usernameLabel" style="-fx-font-weight: bold; -fx-font-size: 14" text="Username">
                                    <HBox.margin>
                                        <Insets />
                                    </HBox.margin></Label>
                                <VBox.margin>
                                    <Insets top="15.0" />
                                </VBox.margin>
                                <opaqueInsets>
                                    <Insets bottom="5.0" />
                                </opaqueInsets>
                            </HBox>
                            <Button fx:id="btnLogout" maxWidth="Infinity" onAction="#handleLogout" styleClass="logout-button" text="Logout">
                                <VBox.margin>
                                    <Insets bottom="15.0" />
                                </VBox.margin></Button>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </VBox>
                    </children>
                </VBox>
            </left>

            <center>
                <StackPane fx:id="contentArea" BorderPane.alignment="CENTER" />
            </center>

        </BorderPane>
    </children>
</StackPane>
